@using Microsoft.AspNetCore.Mvc.Rendering
@model Vidly.ViewModels.NewMovieViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@using (@Html.BeginForm("Create", "Movie"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Movie.Name)
    @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control"})
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Movie.ReleaseDate, "Release date")
    @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control"})
</div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Genres, new SelectList(Model.Genres, "Id", "Name"), "Select genre", new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Available, "Number in Stock")
        @Html.TextBoxFor(m => m.Movie.Available, new { @class = "form-control"})
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}