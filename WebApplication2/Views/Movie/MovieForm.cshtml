@using Microsoft.AspNetCore.Mvc.Rendering
@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Movie != null && Model.Movie.MovieId != 0)
{
    <h2>Edit Movie</h2>
    ViewData["Title"] = "Edit";
}
else
{
    <h2>New Movie</h2>
}

@using (@Html.BeginForm("Save", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate, "Release date")
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Movie.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Genre)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Available, "Number in Stock")
        @Html.TextBoxFor(m => m.Movie.Available, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Available)
    </div>

    @Html.HiddenFor(m => m.Movie.MovieId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
